{
  "name": "rallyhq",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter=@rallyhq/web dev",
    "dev:functions": "supabase functions serve --no-verify-jwt",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "postinstall": "turbo run postinstall",
    "supabase:start": "supabase start",
    "supabase:functions:dev": "supabase functions serve --no-verify-jwt",
    "supabase:functions:list": "supabase functions list",
    "supabase:functions:deploy": "supabase functions deploy"
  },
  "devDependencies": {
    "supabase": "^2.72.4",
    "turbo": "^1.10.0"
  }
}
